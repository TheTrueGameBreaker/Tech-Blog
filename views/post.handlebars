<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Create a new blog post!</h2>
    <form class="form post-form">
      <div class="form-group">
        <label for="text-post">Content:</label>
        <input class="form-input" type="text" id="text-confirm" />
      </div>
      <div class="form-group">
        <label for="username-post">Owner by user identification number:</label>
        <input class="form-input" type="number" id="username-id-confirm" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit new post</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/create-post.js"></script>